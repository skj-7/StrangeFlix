<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Series-Info</title>
    <link rel="stylesheet" href="../static/css/series-info.css">
</head>

<body>
    <p>Name:<%= series.name %></p>
    <div class="video">
        <img src="<%= series.imgpath %>" alt="">
        <div class="info">
            <form method="post" action="/admin/upload/editSeries" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Series-Title</label>
                    <input type="text" name="title" class="form-control" value=<%= series.name %> required>
                </div>

                <div class="form-group">
                    <label>Series-Price</label>
                    <div id="price">
                        <input type="text" name="sym" id="sym" value=&#x20B9; readonly>
                        <input type="number" value=<%= series.price %> name="price" id="price-value"
                            class="form-control" min="0" required>
                    </div>
                </div>

                <div class="form-group">
                    <label>Series-Duration</label>
                    <div id="duration">
                        <input type="number" name="hours" class="form-control" value=<%= series.hrs %> placeholder="hrs"
                            min="0" required>
                        <input type="number" name="minutes" class="form-control" value=<%= series.mins %>
                            placeholder="mins" min="0" required>
                        <input type="number" name="seconds" class="form-control" value=<%= series.secs %>
                            placeholder="secs" min="0" required>
                    </div>
                </div>

                <div class="form-group">
                    <label>Series-Description</label>
                    <textarea type="text" name="description" rows="5" cols="30" value=<%= series.description %>
                        class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label>Series-Tags (Use "," to separate)</label>
                    <input type="text" name="tags" value=<%= series.tags %> class="form-control">
                </div>

                <div class="form-group">
                    <label>Series-Category</label>
                    <input type="text" value=<%= series.category %> name="category">
                </div>
                <input type="submit" class="btn" value="UPDATE">
            </form>
        </div>
    </div>
    <div class="episodes">
        <% for(var i=0;i<series.videoarray.length;i++) {%>
            <div class="content">
                <p>Title:<%= series.videoarray[i].name %></p>
                <img src="<%= series.videoarray[i].imgpath %>" alt="">
                <div class="btn">
                    <button>Remove</button>
                    <button>Edit</button>
                </div>
            </div>
        <% } %>
    </div>
</body>

</html>