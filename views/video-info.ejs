<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video-Info</title>
    <link rel="stylesheet" href="../static/css/video-info.css">
</head>
<body>
    <p>Name:<%= video.name %></p>
    <div class="video">
        <img src="<%= video.imgpath %>" alt="">
        <div class="info">
            <form method="post" action="/admin/upload/edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="title" class="form-control" value=<%= video[i].name %> required>
                </div>
    
                <div class="form-group">
                    <label>Price</label>
                    <div id="price">
                        <input type="text" name="sym" id="sym" value=&#x20B9; readonly>
                        <input type="number" value=<%= video.price %> name="price" id="price-value" class="form-control" min="0" required>
                    </div>
                </div>
    
                <div class="form-group">
                    <label>Duration</label>
                    <div id="duration">
                        <input type="number" name="hours" class="form-control" value=<%= video.hrs %> placeholder="hrs" min="0" required>
                        <input type="number" name="minutes" class="form-control" value=<%= video.mins %> placeholder="mins" min="0" required>
                        <input type="number" name="seconds" class="form-control" value=<%= video.secs %> placeholder="secs" min="0" required>
                    </div>
                </div>
    
                <div class="form-group">
                    <label>Series Name (leave blank if none)</label>
                    <input id="target" type="text" name="series" value=<%= video.series %>  class="form-control">
                </div>
    
                <div class="form-group">
                    <label>Description</label>
                    <textarea type="text" name="description" rows="5" cols="30" value=<%= video.description %> class="form-control"></textarea>
                </div>
    
                <div class="form-group">
                    <label>Tags (Use "," to separate)</label>
                    <input type="text" name="tags" value=<%= video.tags %> class="form-control">
                </div>
    
                <div class="form-group">
                    <label>Category</label>
                    <input type="text" value=<%= video.category %>  name="category">
                </div>
                <input type="submit" class="btn" value="UPDATE">
            </form>
        </div>
    </div>
    <div class="commentSection">
        <div id="comlist">
            <% for(var j=0; j < video.comments.length; j++) {%>
            <p class="fa fa-user-circle">Username:<%=video.comments[j].username%></p>
            <p class="comment"><%=video.comments[j].comment%></p>
            <div id="flag">
                <% if (video.comments[j].flag== "true") { %>
                <p class="fa fa-flag"></p>
                <button>Remove</button>
                <% } %>
            </div>
            <hr>
        </div>
    </div>
</body>
</html>