<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User-Record</title>
    <link rel="stylesheet" href="/static/css/user-record.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="nav">
        <header>
            <a href="/admin/upload">Upload</a>
            <a href="/admin/flags">Flags</a>
            <a class="user" href="/admin/users">Users</a>
            <a  href="/admin/regseries">Reg-Series</a>
        </header>
        <div class="mid">
            <img src="/static/icon.jpg" alt="">
            <p>StrangeFlix</p>
        </div>

        <div class="topnav">
            <a href="#home" class="active"></a>
            <!-- Navigation links (hidden by default) -->
            <div id="myLinks">
                <a href="/admin/control">Home</a>
                <a href="/admin/setting">Setting</a>
                <a href="https://dashboard.paystack.com/#/transactions?status=success&use_cursor=true">Transactions</a>
                <a href="/home">User-Panel</a>
                <a href="/admin/logout">Logout</a>
            </div>
            <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
    </div>
    <div class="main">
        <div class="sider">
            <button onclick="free()">Free</button>
            <button onclick="ppv()">Pay-per-view</button>
            <button onclick="premium()">Premium</button>
        </div>
        <div class="middle">
            <p class="fa fa-users" id="icon"></p>
            <div id="free">
                <% for(var i=0;i<free.length;i++) {%>
                    <div id="free-user">
                        <p>USER NAME:<%= free[i].name %></p><hr>
                        <p>USER ID:<%= free[i].Emailid %></p>
                    </div>
                <% } %>
            </div>
            <div id="ppv">
                <% for(var i=0;i<ppv.length;i++) {%>
                    <div id="ppv-user">
                        <p>USER NAME:<%= ppv[i].name %></p><hr>
                        <p>USER ID:<%= ppv[i].Emailid %></p><hr>
                        <p>Duration-left:<%=ppv[i].durationleft%></p>
                    </div>
                <% } %>
            </div>
            <div id="premium">
                <% for(var i=0;i<premium.length;i++) {%>
                    <div id="premium-user">
                        <p>USER NAME:<%= premium[i].name %></p><hr>
                        <p>USER ID:<%= premium[i].Emailid %></p><hr>
                        <p>Duration-left:<%=premium[i].durationleft%></p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script src="/static/fe_js/user-record.js"></script>
</body>

</html>