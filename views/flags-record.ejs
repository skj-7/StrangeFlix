<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User-Record</title>
    <link rel="stylesheet" href="/static/css/flags-record.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="nav">
        <header>
            <a href="/admin/upload">Upload</a>
            <a class="flag" href="/admin/flags">Flags</a>
            <a href="/admin/users">Users</a>
            <a  href="/admin/regseries">Reg-Series</a>
        </header>
        <div class="mid">
            <img src="/static/icon.jpg" alt="">
            <p>StrangeFlix</p>
        </div>

        <div class="topnav">
            <a href="#home" class="active"></a>
            <!-- Navigation links (hidden by default) -->
            <div id="myLinks">
                <a href="/admin/control">Home</a>
                <a href="/admin">Logout</a>
                <a href="/admin/setting">Setting</a>
            </div>
            <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
    </div>
    <div class="main">
        <div class="sider">
            <button onclick="video()">Flagged Videos</button>
            <button onclick="comment()">Flagged Comments</button>
        </div>
        <div class="middle">
            <div id="video">
                <% for(var i=0;i<videoarray.length;i++) {%>
                <div id="vid">
                    <img id="thumbnail" src="<%= videoarray[i].imgpath %>" alt="" onclick="play()">
                    <div class="detail">
                        <p>Name:<%= videoarray[i].name %></p>
                        <p>Duration:<%=videoarray[i].duration %></p>
                        <p>Description:<%=videoarray[i].description %></p>
                        <p>Tags:<%=videoarray[i].tags %></p>
                        <p>Category:<%=videoarray[i].catagory %></p>
                    </div>
                    <div class="btns">
                        <button>Remove Flag</button>
                        <button>Remove Video</button>
                    </div>
                </div>
                <% } %>
            </div>
            <div id="comment">
                <% for(var i=0;i<comments.length;i++) {%>
                    <div id="list">
                        <div class="fa fa-user-circle" id="com"><%=comments[i].username%></div>
                        <p><%=comments[i].comment%></p>
                        <div class="btns-com">
                            <button>Remove Flag</button>
                            <button>Remove Comment</button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script src="/static/fe_js/flags-record.js"></script>
</body>

</html>