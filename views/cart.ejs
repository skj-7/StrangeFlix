<body style="background-color: black;">
    <div class="topbar">
        <a class="back" href="/home"><i class="fa fa-chevron-circle-left"></i></a>
    </div>
    <class class="display">
        <img src="../static/img/dr.jpg" alt="">
        <b>CART</b>
    </class>
    <div class="selections">
        <p>Your Selections</p>
    </div>
    <div class="middle">
        <div class="videos">
            <div class="content">
                <img src="../static/img/m1.jpg" alt="">
                <div class="details">
                    <p>Mirzapur S2 episode-1</p>
                    <p>Genres: Action | Crime | Drama | Thriller</p>
                    <p>Duration:50:23</p>
                </div>
                <div class="btns">
                    <a class="btn btn-danger"><p class="fa fa-inr" aria-hidden="true"> 39</p></a>
                    <form action="/cart/remove" method="post">
                        <button class="remove">Remove from cart</button>
                    </form>
                </div>
            </div>
            <div class="content">
                <img src="../static/img/m2.jpg" alt="">
                <div class="details">
                    <p>Mirzapur S2 episode-2</p>
