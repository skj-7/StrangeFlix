<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Series-Info</title>
    <link rel="stylesheet" href="/static/css/series-info.css">
</head>

<body>
    <p class="id">Name:<%= series.seriesTitle %></p>
    <div class="video">  
        <div class="info">
            <form method="post" action="/admin/edit/series/<%= series._id %>" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Series-Title</label>
                    <input type="text" name="title" class="form-control" value=<%= series.seriesTitle %> required>
                </div>

                <div class="form-group">
                    <label>Series-Price</label>
                    <div id="price">
                        <input type="text" name="sym" id="sym" value=&#x20B9; readonly>
                        <input type="number" value=<%= series.seriesPrice %> name="price" id="price-value"
                            class="form-control" min="0" required>
                    </div>
                </div>

                <div class="form-group">
                    <label>Series-Duration</label>
                    <div id="duration">
                        <input type="number" name="hours" class="form-control" value=<%= series.seriesDuration.hours %> placeholder="hrs"
                            min="0" required>
                        <input type="number" name="minutes" class="form-control" value=<%= series.seriesDuration.minutes %>
                            placeholder="mins" min="0" required>
                        <input type="number" name="seconds" class="form-control" value=<%= series.seriesDuration.seconds %>
                            placeholder="secs" min="0" required>
                    </div>
                </div>

                <div class="form-group">
                    <label>Series-Description</label>
                    <textarea type="text" name="description" rows="5" cols="30" class="form-control"><%= series.seriesDescription %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label>Series-Tags (Use "," to separate)</label>
                    <input type="text" name="tags" class="form-control" value=<%= series.tags %> >
                </div>

                <div class="form-group">
                    <label>Series-Category</label>
                    <input type="text" value=<%= series.seriesCategory %> name="category">
                </div>
                <input type="submit" class="btn" value="UPDATE">
            </form>
        </div>
        <img src="/<%= series.seriesThumbnail %>" alt="">
    </div>
    <h2 class="Episodes">EPISODES/PLAYLIST</h2>
    <div class="episodes">
        <% for(var i=0; i < series.videoList.length; i++) { %>
            <div class="content">
                <p class="epititle">Title: <%= series.videoList[i].title %></p>
                <img src="/<%= series.videoList[i].thumbnail %>" alt="">
                <div class="btns">
                    <button class="btnepi">Remove</button>
                    <button class="btnepi">Edit</button>
                </div>
            </div>
        <% } %>
    </div>
</body>

</html>